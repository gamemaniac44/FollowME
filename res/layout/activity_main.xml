<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f1e0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.followMe.MainActivity" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- website to get colors http://www.color-hex.com/ -->

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switchActivity"
        android:layout_alignParentLeft="true" >
    </FrameLayout>

    <TextView
        android:id="@+id/loginHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/login"
        android:textColor="#009e08"
        android:textSize="30sp" />

    <GridLayout
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordFieldHeader"
        android:layout_alignLeft="@+id/userNameInput"
        android:layout_marginBottom="46dp" >
    </GridLayout>

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordFieldHeader"
        android:layout_alignRight="@+id/switchActivity"
        android:layout_centerVertical="true"
        android:background="#009e08"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/userNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userPassword"
        android:layout_alignLeft="@+id/passwordFieldHeader"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp"
        android:background="#009e08"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/passwordFieldHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userPassword"
        android:layout_alignLeft="@+id/frameLayout1"
        android:text="@string/paswrd"
        android:textColor="#009e08" />

    <Button
        android:id="@+id/switchActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout1"
        android:layout_below="@+id/userPassword"
        android:layout_marginTop="58dp"
        android:background="#009e08"
        android:onClick="submitAccount"
        android:text="@string/signin"
        android:textColor="#f4f1e0"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usernameFieldHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test"
        android:layout_alignLeft="@+id/test"
        android:text="@string/user"
        android:textColor="#009e08" />

    <Button
        android:id="@+id/userRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switchActivity"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:background="#f4f1e0"
        android:onClick="newUserAccount"
        android:text="@string/text"
        android:textColor="#009e08"
        android:textStyle="normal"
        android:textSize = "12sp" />

</RelativeLayout>